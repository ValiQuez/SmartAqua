<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SmartAquaSettings">

    <ImageView
        android:id="@+id/SmartAquaSettingsTitle"
        android:layout_width="@dimen/title_pic_width"
        android:layout_height="@dimen/title_pic_height"
        android:src="@drawable/settings_title"
        android:contentDescription="@string/settingsTitleImgDesc"/>

    <TextView
        android:id="@+id/SmartAquaPortraitLock"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="175dp"
        android:layout_marginStart="30dp"

        android:text="@string/settingsLockPortrait"
        android:textColor="@color/turquoise"
        android:textStyle="bold"
        android:textSize="17sp"
        />

    <ToggleButton
        android:id="@+id/SmartAquaPortraitLockToggleBtn"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/turquoise"

        android:layout_marginTop="170dp"
        android:layout_marginStart="290dp"

        android:text="@string/settingsTogglePortraitBtn"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/SmartAquaResetValues"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="250dp"

        android:text="@string/settingsResetValues"
        android:textColor="@color/turquoise"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/SmartAquaResetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/turquoise"

        android:layout_marginTop="245dp"
        android:layout_marginStart="280dp"

        android:text="@string/settingsResetBtn"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/SmartAquaOption3"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="325dp"

        android:text="@string/placeholder"
        android:textColor="@color/turquoise"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <!-- Button for option 3 here -->

    <TextView
        android:id="@+id/SmartAquaOption4"
        android:layout_width="220dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="30dp"
        android:layout_marginTop="375dp"

        android:text="@string/placeholder"
        android:textColor="@color/turquoise"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <!-- Button for option 4 here -->


</FrameLayout>